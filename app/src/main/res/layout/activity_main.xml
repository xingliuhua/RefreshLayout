<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_containListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contain a ListView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_containLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contain a LinearLayout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_containListViewCustomHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contain a ListView custom header"
        android:textAllCaps="false" />
</LinearLayout>
